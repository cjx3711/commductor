<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gestures area"/>

    <Button
        android:id="@+id/button_gestures_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gestures Test button"/>

    <TextView
        android:id="@+id/pitch_roll_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pitch: null\n Roll: null"
        android:textSize="18sp"
        android:layout_marginTop="68dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/gesture_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gesture: null"
        android:textSize="18sp"
        android:layout_marginTop="68dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/data_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data: null"
        android:textSize="18sp"
        android:layout_marginTop="68dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />




</LinearLayout>